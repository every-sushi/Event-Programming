<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rlaskfud0515.kr.hs.emirim.gridcalculator2.MainActivity">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/but_num1"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="0"
            />

        <Button
            android:id="@+id/but_num2"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="1"
            />

        <Button
            android:id="@+id/but_num3"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="2"
            />

        <Button
            android:id="@+id/but_num4"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="3"
            android:layout_row="0"
            android:text="3"
            />

        <Button
            android:id="@+id/but_num5"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="4"
            android:layout_row="0"
            android:text="4"
            />

        <Button
            android:id="@+id/but_num6"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="5"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="6"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="7"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="3"
            android:layout_row="1"
            android:text="8"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:layout_column="4"
            android:layout_row="1"
            android:text="9"
            />


    </GridLayout>

    <Button
        android:id="@+id/but_op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        />
    <Button
        android:id="@+id/but_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        />
    <Button
        android:id="@+id/but_op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곱하기"
        />
    <Button
        android:id="@+id/but_op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나누기"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게산결과 : "
        android:textSize="30dp"
        android:textColor="#ff638e" />

</LinearLayout>


